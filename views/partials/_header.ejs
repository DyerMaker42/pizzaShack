      </form>
      <% } else { %> 
      <form class="form-inline" action="/logout" method="POST">
        <div class="form-group mb-2">
          <label for="no-items-in-cart" style="margin-right: 10px"></label>
          <button type="submit" class="btn btn-outline-dark">View Cart</button>
        </div>
      </form>
      <% } %>
