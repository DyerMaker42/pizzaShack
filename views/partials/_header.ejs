<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/">Pizza Shack</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
    </div>
    <% if(status.status === false){ %>
      <p>Add a pizza to get started</p>
      <% } else { %> 
      <form class="form-inline" action="/order" method="GET">
        <div class="form-group mb-2">
          <label for="items-in-cart" style="margin-right: 10px"></label>
          <button type="submit" class="btn btn-outline-dark">View Cart (<%= quantity.qty %>)</button>
        </div>
      </form>
      <% } %>
  </nav>
</header>